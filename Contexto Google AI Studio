setIsTyping(true);
code
Code
setTimeout(() => {
  let response = '';
  
  if (chatInput.toLowerCase().includes('aÃ±ade')) {
    const taskText = chatInput.replace(/aÃ±ade|aÃ±adir/gi, '').trim();
    if (taskText) {
      const { type, extras } = detectTaskType(taskText);
      setTasks([...tasks, {
        id: Date.now(),
        title: taskText,
        priority: 'media',
        date: today,
        status: 'pendiente',
        type,
        notes: '',
        tags: [],
        listId: 1,
        ...extras
      }]);
      response = `âœ“ Tarea creada: "${taskText}"${extras.contact ? '\n\nğŸ“ Contacto detectado: ' + extras.contact : ''}${extras.location ? '\n\nğŸ“ UbicaciÃ³n: ' + extras.location : ''}`;
    }
  } else if (chatInput.toLowerCase().includes('hoy')) {
    const todayTasks = tasks.filter(t => t.date === today && t.status !== 'completada');
    response = todayTasks.length === 0 ? 'Â¡No tienes tareas para hoy! ğŸˆ' : 
      `Hoy tienes ${todayTasks.length} tarea${todayTasks.length > 1 ? 's' : ''}:\n\n${todayTasks.map(t => 'â€¢ ' + t.title).join('\n')}`;
  } else if (chatInput.toLowerCase().includes('cuÃ¡ntas')) {
    response = `Tienes ${totalTasks} tareas:\nâœ“ ${totalCompleted} completadas\nâ³ ${totalTasks - totalCompleted} pendientes`;
  } else {
    response = 'Puedo ayudarte con:\n\nâ€¢ "AÃ±ade [tarea]"\nâ€¢ "QuÃ© tengo hoy"\nâ€¢ "CuÃ¡ntas tareas tengo"';
  }

  setIsTyping(false);
  setChatMessages(prev => [...prev, { role: 'aura', text: response }]);
}, 800);

setChatInput('');
