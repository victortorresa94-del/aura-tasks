if (sortBy === 'prioridad') {
filteredTasks.forEach(t => {
const key = t.priority === 'alta' ? 'ğŸ”´ ALTA' : t.priority === 'media' ? 'ğŸŸ  MEDIA' : 'ğŸŸ¢ BAJA';
if (!grouped[key]) grouped[key] = [];
grouped[key].push(t);
});
} else if (sortBy === 'tipo') {
