});
} else if (sortBy === 'fecha') {
filteredTasks.forEach(t => {
const date = new Date(t.date);
const key = date.toLocaleDateString('es-ES', { weekday: 'short', day: 'numeric', month: 'short' }).toUpperCase();
if (!grouped[key]) grouped[key] = [];
grouped[key].push(t);
});
}
