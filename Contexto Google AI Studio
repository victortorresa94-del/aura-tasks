const detectTaskType = (text) => {
const lower = text.toLowerCase();
let type = 'normal';
let extras = {};
code
Code
if (lower.includes('llamar')) {
  type = 'call';
  const match = text.match(/llamar a? ([A-Za-zÃÃ‰ÃÃ“ÃšÃ¡Ã©Ã­Ã³ÃºÃ±Ã‘\s]+)/i);
  if (match) {
    extras.contact = match[1].trim();
    extras.phone = '+34600000000';
  }
} else if (lower.includes('ir a') || lower.includes('comprar')) {
  type = 'shopping';
  const match = text.match(/(?:ir a|comprar en) ([A-Za-zÃÃ‰ÃÃ“ÃšÃ¡Ã©Ã­Ã³ÃºÃ±Ã‘\s]+)/i);
  if (match) extras.location = match[1].trim();
} else if (lower.includes('ensayar')) {
  type = 'music';
  const match = text.match(/ensayar (.+)/i);
  if (match) {
    extras.songName = match[1].trim();
    extras.spotifyUrl = 'https://open.spotify.com/search/' + encodeURIComponent(match[1]);
  }
} else if (lower.includes('pagar')) {
  type = 'payment';
  const amountMatch = text.match(/(\d+(?:[.,]\d+)?)\s*â‚¬/);
  if (amountMatch) extras.amount = amountMatch[0];
}

return { type, extras };
};
const addTask = () => {
if (newTask.trim()) {
const { type, extras } = detectTaskType(newTask);
setTasks([...tasks, {
id: Date.now(),
title: newTask,
priority: newPriority,
date: newDate,
status: 'pendiente',
type,
notes: '',
tags: [],
listId: newListId,
...extras
}]);
setNewTask('');
setNewPriority('media');
setNewDate('2025-10-15');
setNewListId(1);
setShowForm(false);
}
};
const toggleTask = (id) => {
setTasks(tasks.map(t => t.id === id ? { ...t, status: t.status === 'completada' ? 'pendiente' : 'completada' } : t));
};
const deleteTask = (id) => {
setTasks(tasks.filter(t => t.id !== id));
setShowDetail(false);
};
const updateTask = (field, value) => {
if (selectedTask) {
const updated = { ...selectedTask, [field]: value };
setTasks(tasks.map(t => t.id === selectedTask.id ? updated : t));
setSelectedTask(updated);
}
};
const addTagToTask = (tag) => {
if (selectedTask && tag.trim()) {
const updated = { ...selectedTask, tags: [...selectedTask.tags, tag] };
setTasks(tasks.map(t => t.id === selectedTask.id ? updated : t));
setSelectedTask(updated);
}
};
const removeTagFromTask = (tagToRemove) => {
if (selectedTask) {
const updated = { ...selectedTask, tags: selectedTask.tags.filter(t => t !== tagToRemove) };
setTasks(tasks.map(t => t.id === selectedTask.id ? updated : t));
setSelectedTask(updated);
}
};
const processAura = () => {
if (!chatInput.trim()) return;
